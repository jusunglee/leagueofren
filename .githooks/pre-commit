#!/bin/sh

# Pre-commit hook: gofmt + compile

set -e

echo "Running gofmt..."
UNFORMATTED=$(gofmt -l .)
if [ -n "$UNFORMATTED" ]; then
    echo "Formatting files:"
    echo "$UNFORMATTED"
    gofmt -w .
    echo "$UNFORMATTED" | xargs git add
    echo "Formatted and staged."
fi

echo "Running go build..."
go build ./...

echo "Pre-commit checks passed"
